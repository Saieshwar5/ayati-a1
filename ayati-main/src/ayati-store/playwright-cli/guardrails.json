{
  "schemaVersion": "ayati-guardrails/v1",
  "skillId": "playwright-cli",
  "mergePolicy": "restrictive",
  "toolAccessPlan": {
    "idempotent": true,
    "operations": [
      {
        "op": "upsert_tool",
        "toolName": "playwright-cli.exec",
        "config": {
          "enabled": true
        }
      },
      {
        "op": "add_global_allowlist_tool",
        "toolName": "playwright-cli.exec"
      },
      {
        "op": "append_unique_guardrail_list",
        "path": "guardrails.shell.allowedPrefixes",
        "values": [
          "playwright-cli",
          "npx"
        ]
      }
    ]
  },
  "toolPolicies": {
    "playwright-cli.exec": {
      "requireConfirmationFor": [
        "destructive"
      ],
      "maxCallsPerRun": 30
    }
  },
  "shell": {
    "allowedPrefixes": [
      "playwright-cli",
      "npx"
    ],
    "denyPrefixes": [
      "rm",
      "dd",
      "mkfs"
    ],
    "denyOperators": [
      "&&",
      "||",
      ";"
    ],
    "denyPatterns": [
      "\\bcurl\\b[^\\n]*\\|\\s*(sh|bash)\\b",
      "\\bwget\\b[^\\n]*\\|\\s*(sh|bash)\\b"
    ]
  },
  "filesystem": {
    "allowedReadRoots": [
      "/"
    ],
    "allowedWriteRoots": [
      "/home/sai-eshwar/my_folder/ayati-a1/ayati-main",
      "/tmp"
    ],
    "requireConfirmationFor": [
      "delete",
      "move_overwrite",
      "shell_destructive"
    ]
  }
}
