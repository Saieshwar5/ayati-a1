{
  "schemaVersion": "ayati-credentials/v1",
  "skillId": "playwright-cli",
  "credentials": [
    {
      "id": "PLAYWRIGHT_CLI_SESSION",
      "type": "env",
      "required": false,
      "secret": false,
      "description": "Optional default browser session name.",
      "usage": "Used by playwright-cli.exec to set default session when session input is absent.",
      "validation": {
        "pattern": "^[A-Za-z0-9_\\-]{1,64}$",
        "minLength": 1
      }
    }
  ],
  "bindings": [
    {
      "tool": "playwright-cli.exec",
      "credentialId": "PLAYWRIGHT_CLI_SESSION",
      "injectAs": "env",
      "target": "PLAYWRIGHT_CLI_SESSION"
    }
  ],
  "missingCredentialBehavior": {
    "mode": "continue",
    "messageTemplate": "Credential {{credentialId}} is optional and was not provided."
  }
}
