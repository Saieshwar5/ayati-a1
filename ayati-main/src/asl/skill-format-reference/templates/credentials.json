{
  "schemaVersion": "ayati-credentials/v1",
  "skillId": "your-skill-id",
  "credentials": [
    {
      "id": "SERVICE_API_KEY",
      "type": "env",
      "required": true,
      "secret": true,
      "description": "API key for external service access.",
      "usage": "Used by your-skill-id.run to authenticate requests.",
      "validation": {
        "pattern": "^[A-Za-z0-9_\\-]{20,}$",
        "minLength": 20
      },
      "redaction": {
        "showPrefix": 4,
        "showSuffix": 2
      }
    }
  ],
  "bindings": [
    {
      "tool": "your-skill-id.run",
      "credentialId": "SERVICE_API_KEY",
      "injectAs": "env",
      "target": "SERVICE_API_KEY"
    }
  ],
  "missingCredentialBehavior": {
    "mode": "fail_fast",
    "messageTemplate": "Missing required credential: {{credentialId}}"
  }
}
