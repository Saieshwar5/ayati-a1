{
  "schemaVersion": "ayati-tools/v1",
  "skillId": "your-skill-id",
  "tools": [
    {
      "name": "your-skill-id.run",
      "description": "Run the primary workflow for this skill.",
      "requiresCredentials": [
        "SERVICE_API_KEY"
      ],
      "selectionHints": {
        "tags": [
          "automation"
        ],
        "aliases": [
          "run_primary_workflow"
        ],
        "examples": [
          "run the main skill action"
        ],
        "domain": "execution",
        "priority": 20
      },
      "inputSchema": {
        "type": "object",
        "required": [
          "action"
        ],
        "properties": {
          "action": {
            "type": "string",
            "description": "Action to run."
          },
          "args": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Optional arguments."
          }
        }
      },
      "executor": {
        "type": "shell_command",
        "command": "your-cli",
        "commandFallbacks": [
          {
            "command": "npx",
            "fixedArgs": [
              "your-cli"
            ]
          }
        ],
        "argsTemplate": [
          "{{action}}",
          "{{...args}}"
        ],
        "timeoutMs": 30000,
        "maxOutputChars": 50000,
        "allowedActions": [
          "status",
          "run"
        ]
      }
    }
  ]
}
